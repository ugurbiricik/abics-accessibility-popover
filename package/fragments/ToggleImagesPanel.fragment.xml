<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
   <Panel id="toggleImagesPanel" expandable="false" width="auto" class="toggleImagesPanel">
      <headerToolbar>
         <OverflowToolbar active="true" press=".onToggleImagesToolbarPress">
            <core:Icon src="sap-icon://background" size="20px" />
            <Title text="{= ${settings>/toggleImagesActive} ? 'Bilder einblenden' : 'Bilder ausblenden' }" />
         </OverflowToolbar>
      </headerToolbar>
   </Panel>
</core:FragmentDefinition> 