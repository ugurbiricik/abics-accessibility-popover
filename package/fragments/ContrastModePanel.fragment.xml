<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Panel id="contrastModePanel" expandable="false" width="auto" class="contrastModePanel">
        <headerToolbar>
            <OverflowToolbar active="true" press=".onContrastModeToolbarPress">
                <core:Icon src="sap-icon://paint-bucket" size="20px" />
                <Title text="{= ${settings>/contrastModeActive} ? 'Kontrastmodus deaktivieren' : 'Kontrastmodus aktivieren' }" />
            </OverflowToolbar>
        </headerToolbar>
    </Panel>
</core:FragmentDefinition> 