<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
   <Panel id="nightModePanel" expandable="false" width="auto" class="nightModePanel">
      <headerToolbar>
         <OverflowToolbar active="true" press=".onNightModeToolbarPress">
            <core:Icon src="sap-icon://dark-mode" size="20px" />
            <Title text="{= ${settings>/nightModeActive} ? 'Nachtmodus deaktivieren' : 'Nachtmodus aktivieren' }" />
         </OverflowToolbar>
      </headerToolbar>
   </Panel>
</core:FragmentDefinition> 